{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@moodflow/types": ["../../packages/types/src"],
      "@moodflow/types/*": ["../../packages/types/src/*"],
      "@moodflow/core": ["../../packages/core/src"],
      "@moodflow/core/*": ["../../packages/core/src/*"]
    },
    "outDir": "./dist",
    "rootDir": "../..",
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "../../packages/types/src/**/*",
    "../../packages/core/src/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
