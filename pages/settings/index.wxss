.container {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}
.section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-sizing: border-box;
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.04);
}
.label {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}
.row {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}
.opt {
  flex: 1;
  padding: 16rpx 0;
  border-radius: 12rpx;
  background: #f2f2f2;
  color: #333;
  text-align: center;
}
.opt.active {
  background: var(--accent-color, #07c160);
  color: #fff;
}
.input, .picker-display {
  width: 100%;
  background: #f7f7f7;
  border-radius: 12rpx;
  padding: 16rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: inherit;
  margin-bottom: 12rpx;
}
.primary {
  background: var(--accent-color, #07c160);
  color: #fff;
  border-radius: 12rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
}
.primary.small {
  padding: 12rpx 24rpx;
  font-size: 26rpx;
}
.warn {
  background: #fa5151;
  color: #fff;
  border-radius: 12rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
}
.plain {
  background: transparent;
  color: var(--accent-color, #07c160);
  border: 2rpx solid var(--accent-color, #07c160);
  border-radius: 12rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
}
.status {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #888;
}
.cloud-row {
  align-items: center;
}
.cloud-row .input {
  margin-bottom: 0;
  flex: 1;
}
.backup-list {
  margin-top: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}
.backup-item {
  border: 2rpx solid rgba(0, 0, 0, 0.05);
  border-radius: 12rpx;
  padding: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}
.backup-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #666;
}
.backup-note {
  font-size: 26rpx;
  color: #333;
}
.empty {
  text-align: center;
  color: #888;
  padding: 24rpx 0;
}
.color-grid {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}
.color-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}
.emoji {
  font-size: 44rpx;
  width: 64rpx;
  text-align: center;
}
.color-input {
  flex: 1;
  background: #f7f7f7;
  border-radius: 12rpx;
  padding: 16rpx;
  box-sizing: border-box;
}
.textarea {
  width: 100%;
  min-height: 200rpx;
  background: #f7f7f7;
  border-radius: 12rpx;
  padding: 16rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: inherit;
}
.encryption-status, .encryption-state {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}
.hint {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
}
.theme-dark {
  background-color: #0f0f0f;
  color: #eee;
}
.theme-dark .section {
  background: #161616;
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.2);
}
.theme-dark .label {
  color: #ddd;
}
.theme-dark .input,
.theme-dark .picker-display,
.theme-dark .color-input,
.theme-dark .textarea {
  background: #1c1c1c;
  color: #eee;
}
.theme-dark .opt {
  background: #1f1f1f;
  color: #ccc;
}
.theme-dark .opt.active {
  background: var(--accent-color, #3ea76a);
  color: #fff;
}
.theme-dark .backup-item {
  border-color: rgba(255, 255, 255, 0.08);
}
