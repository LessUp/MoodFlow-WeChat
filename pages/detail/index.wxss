.container { padding: 24rpx; }
.section { background: #fff; border-radius: 16rpx; padding: 20rpx; margin-bottom: 20rpx; }
.label { font-size: 28rpx; color: #555; margin-bottom: 12rpx; }
.value.date { font-size: 30rpx; color: #111; }
.emoji-grid { display: flex; flex-wrap: wrap; }
.emoji-item { width: 14.2857%; height: 96rpx; display: flex; align-items: center; justify-content: center; font-size: 44rpx; border-radius: 12rpx; }
.emoji-item.selected { background: #07c16022; border: 2rpx solid #07c160; }
.note { width: 100%; min-height: 180rpx; background: #f7f7f7; border-radius: 12rpx; padding: 16rpx; box-sizing: border-box; }
.actions { display: flex; gap: 16rpx; }
.btn { flex: 1; }
.btn.primary { background: #07c160; color: #fff; }
.btn.warn { background: #fa5151; color: #fff; }

.theme-dark { background-color: #0f0f0f; color: #eee; }
.theme-dark .section { background: #161616; }
.theme-dark .label { color: #bbb; }
.theme-dark .value.date { color: #eee; }
.theme-dark .emoji-item { color: #eee; }
.theme-dark .emoji-item.selected { background: #3ea76a22; border-color: #3ea76a; }
.theme-dark .note { background: #1c1c1c; color: #eee; }
